<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/border_listview"
            android:gravity="center"
            android:text="STT"
            android:textColor="@color/blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_xuong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_listview"
                    android:gravity="center"
                    android:text="Xuong"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tv_ngay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/border_listview"
                    android:gravity="center"
                    android:text="Ngày"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tv_soluong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/border_listview"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="Số lượng"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tv_soluongdaxuly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/border_listview"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="Đã nhận"
                    android:textColor="@color/blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_MVL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/border_listview"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Mã VL" />

                <TextView
                    android:id="@+id/tv_tenVatLieu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/border_listview"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Tên" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_QuyCach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_listview"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Quy cách" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>